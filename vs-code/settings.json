{
  // Typograpyh
  "workbench.colorTheme": "Catppuccin Frapp√©",
  "editor.fontFamily": "MonaspiceRN Nerd Font Mono",
  "editor.fontSize": 13,
  "editor.lineHeight": 0,
  "chat.editor.fontWeight": "bold",
  "editor.suggestFontSize": 13,
  "editor.suggestLineHeight": 28,
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.lineHeight": 1.5,

  // Color Customizations
  "workbench.colorCustomizations": {
    "editor.background": "#313445",
    "editorWidget.background": "#1f2738bb",
    "editorHoverWidget.background": "#2d3750",
    "sideBar.background": "#313445",
    "sideBarSectionHeader.background": "#313445",
    "terminal.background": "#313445",
    "editorLineNumber.activeForeground": "#586374",
    "editorLineNumber.dimmedForeground": "#586374",
    "editorLineNumber.foreground": "#58637466",
    "scrollbarSlider.activeBackground": "#6b6f87",
    "scrollbarSlider.background": "#6b6f87",
    "scrollbarSlider.hoverBackground": "#6b6f87",
    "sideBar.border": "#63697355"
  },

  // Find
  "search.useIgnoreFiles": false,
  "search.exclude": {
    "**/vendor/*": true,
    "**/public/{[^i],?[^n]}*": true,
    "**/node_modules": true,
    "**/dist": true,
    "**/_ide_helper.php": true,
    "**/composer.lock": true,
    "**/package-lock.json": true,
    "storage": true,
    ".phpunit.result.cache": true,
    "**/.wasp/out": true,
    "**/bower_components": true,
    "**/*.code-search": true
  },
  "search.quickOpen.includeHistory": false,

  // Code
  "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?",
  "emmet.includeLanguages": {
    "blade": "html",
    "vue-html": "html",
    "vue": "html"
  },
  "files.associations": {
    ".php_cs": "php",
    ".php_cs.dist": "php"
  },

  // Prettier
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Editor Settings
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,

  // APC Settings
  "apc.electron": {
    "backgroundColor": "#2a2e3d",
    "frame": true,
    "transparent": true,
    "titleBarStyle": "hiddenInset",
    "vibrancy": "ultra-dark",
    "trafficLightPosition": {
      "x": 15,
      "y": 13
    }
  },
  "apc.stylesheet": {
    ".editor .title": "background: transparent !important;",
    ".actions-container.highlight-toggled": "display: none !important",
    ".editor .title .actions-container .action-item a": "visibility: hidden;",
    ".editor .title .actions-container": "flex-direction: row-reverse;",
    ".editor .scrollbar .slider": "visibility: hidden",
    ".editor .scrollbar:hover .slider": "visibility: initial",
    ".monaco-editor .cursor": "background: linear-gradient(to bottom, #7f00ff, #e100ff) !important;"
  },
  "editor.accessibilitySupport": "off",
  "editor.guides.indentation": false
}
